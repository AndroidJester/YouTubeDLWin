<?xml version="1.0" encoding="utf-8"?>

<Window
    x:Class="YouTubeDLWin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YouTubeDLWin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="YouTubeDLWin">

    <StackPanel
        Orientation="Vertical"
        Padding="15">


        <TextBlock
            Text="Welcome to YouTubeDLWin"
            FontSize="25" />

        <TextBlock
            Padding="0 10 10 25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="Place a YouTube Url in the TextBox" />


        <TextBox x:ConnectionId='2'
            x:Name="UrlVideo" />


        <Button x:ConnectionId='3'
            x:Name="DownloadButton"
            Margin="0 20 0 0"
            Content="Download"
            HorizontalAlignment="Center">
            <Button.Flyout>
                <Flyout>
                    <StackPanel>

                        <CheckBox x:ConnectionId='4'
                            x:Name="VideoAudioChoice"
                                                
                            Content="Download Video or Audio" />

                        <CheckBox x:ConnectionId='5'
                            x:Name="Subtitles"
                            Visibility="Collapsed"
                            Content="Include Subtitles" />

                        <CheckBox x:ConnectionId='6'
                            x:Name="EmbedChapters"
                            Visibility="Collapsed"
                            Content="Add Chapters to Video" />


                        <Button x:ConnectionId='7'
                                                
                            Content="Download" />
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
    </StackPanel>
</Window>

